#include "bool_type.h"
#include "Tremolo/lfo_type.h"
#ifndef EFFECTS_STRUCTURES_H_
#define EFFECTS_STRUCTURES_H_

typedef enum { ms, volume, frequency } kind_of_parameter; /// ms- delay-time, volume - gain(1-100) and volume(0-1) normalized during init of effect
struct delay_structure
{
	bool On;
	short int opoznienie;
	char gain;

}  delay_structure={false,600,100};


struct delay2_structure
{
	bool On;
	short int opoznienie;
	char FF; //%feedforward
	char BL;  //%blend
	char FB; //%feedbackward

}  delay2_structure={false,400,50,70,50};

struct falnger_chorus_structure
{
	bool On;
	char opoznienie;
	char lfo_frequency;
	char lfo_amplitude;
	char volume;
}	flanger_structure={false,10,1,100,100},chorus_structure={false,1,1,40,100};

struct distortion_structure
{
	bool On;
	char gain;
	char mix;
	char volume;
}	distortion_structure={false,20,50,80};

struct tremolo_structure
{
	bool On;
	char lfo_frequency;
	char volume;
	typ_LFO type;
}	tremolo_structure={false,20,50,sinus};


#endif /* EFFECTS_STRUCTURES_H_ */
